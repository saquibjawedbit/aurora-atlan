    {
      "name": "Queue-Based Bookings",
      "item": [
        {
          "name": "Book Event (Queue)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.jobId) {",
                  "        pm.collectionVariables.set('jobId', response.jobId);",
                  "    }",
                  "    if (response.statusEndpoint) {",
                  "        const jobId = response.statusEndpoint.split('/').pop();",
                  "        pm.collectionVariables.set('jobId', jobId);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": ""
            },
            "url": {
              "raw": "{{baseUrl}}/api/bookings/{{eventId}}/book",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bookings", "{{eventId}}", "book"]
            }
          }
        },
